---
layout: null
permalink: /sitemap.xml
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  
  <!-- Home Pages -->
  <url>
    <loc>{{ site.url }}/</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>1.0</priority>
  </url>
  <url>
    <loc>{{ site.url }}/en/</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>1.0</priority>
  </url>

  <!-- French Main Pages -->
  {% assign fr_pages = site.pages | where_exp: "page", "page.path contains 'fr/'" | where_exp: "page", "page.path contains '.html'" | where_exp: "page", "page.path contains 'projects' == false" %}
  {% for page in fr_pages %}
  <url>
    <loc>{{ site.url }}{{ page.url }}</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>{% if page.url contains 'portfolio' %}weekly{% else %}monthly{% endif %}</changefreq>
    <priority>{% if page.url contains 'portfolio' %}0.9{% else %}0.8{% endif %}</priority>
  </url>
  {% endfor %}

  <!-- English Main Pages -->
  {% assign en_pages = site.pages | where_exp: "page", "page.path contains 'en/'" | where_exp: "page", "page.path contains '.html'" | where_exp: "page", "page.path contains 'projects' == false" | where_exp: "page", "page.path contains 'index.html' == false" %}
  {% for page in en_pages %}
  <url>
    <loc>{{ site.url }}{{ page.url }}</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>{% if page.url contains 'portfolio' %}weekly{% else %}monthly{% endif %}</changefreq>
    <priority>{% if page.url contains 'portfolio' %}0.9{% else %}0.8{% endif %}</priority>
  </url>
  {% endfor %}

  <!-- French Projects -->
  {% assign fr_projects = site.pages | where_exp: "page", "page.path contains 'fr/projects/'" %}
  {% for project in fr_projects %}
  <url>
    <loc>{{ site.url }}{{ project.url }}</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.7</priority>
  </url>
  {% endfor %}

  <!-- English Projects -->
  {% assign en_projects = site.pages | where_exp: "page", "page.path contains 'en/projects/'" %}
  {% for project in en_projects %}
  <url>
    <loc>{{ site.url }}{{ project.url }}</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.7</priority>
  </url>
  {% endfor %}

</urlset>
